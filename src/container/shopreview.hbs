<main>
    <div class="card mb-5">
        <div class="nav">
            {{#with navigation}}
            {{#each links}}
            <div class="nav-item">
                <a href="https://github.com/" class="nav-link {{#if @last}}disabled{{/if}}">
                    {{text}}
                </a>
            </div>
            {{/each}}
            {{/with}}
        </div>
    </div>
    <div class="row">
        {{#with formBlock}}
        <div class="col-8">
            <h1>{{header}}</h1>
            {{#with rating}}
            <p class="mt-3">{{title}}: {{value}}</p>
            {{/with}}
            {{#with actionBlock}}
            <div class="nav">
                {{#each tabs}}
                <div class="nav-tabs">
                    <div class="nav-item mx-4">
                        <a class="nav-link {{#if @last}} active {{/if}} px-4" href="#">{{text}}</a>
                    </div>
                </div>
                {{/each}}
            </div>
            <hr class="my-5">
            <div class="card">
                <div class="card-body">
                    {{#with report}}
                    <div class="card-title">{{title}}</div>
                    {{#with button}}
                    <div>
                        <a href="https://www.youtube.com/" class="btn btn-secondary">{{text}}</a>
                    </div>
                    {{/with}}
                    {{/with}}
                </div>
            </div>
            {{/with}}
            <hr class="my-5">
            {{#with feedbackBlock}}
            <h2 class="mb-5">{{title}}</h2>
            {{#each buttons}}
            <a href="https://www.youtube.com/"
                class="btn {{#if isWarning}} btn-warning {{else}} btn-success {{/if}} {{#if isDanger}} btn-danger {{/if}} me-4 px-4">
                {{text}}
            </a>
            {{/each}}
            {{/with}}
        </div>
        <div class="col-4">
            {{#with goodsInfo}}
            <div class="row">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="col-8">
                            <img class="card-img-top" src="https://picsum.photos/110/100">
                            <div class="mt-3"><b>{{name}}</b></div>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5>{{price}}</h5>
                        <p>{{#if inMarket}} Є в наявності {{/if}}</p>
                        {{#each buttons}}
                        <div>
                            <a href="https://www.youtube.com/"
                                class="btn {{#if isPrimary}} btn-primary {{else}} btn-secondary {{/if}} mb-2">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        {{#with seller}}
                        {{title}} : <b>{{value}}</b>
                        {{/with}}
                    </div>
                </div>
            </div>
            {{/with}}
        </div>
        {{/with}}
    </div>
    <hr class="my-5">
    {{> reviewItem}}
    <div class="card text-bg-success text-center mt-5">
        <div class="card-body">
            {{#with service}}
            <h2>{{title}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
            <div>
                <a href="https://www.youtube.com/" class="btn btn-primary">{{text}}</a>
            </div>
            {{/each}}
            {{/with}}
        </div>
    </div>
    <hr class="my-5">
    <div class="nav">
        {{#each footer}}
        <div class="nav-item">
            {{#each this}}
            <a href="https://www.youtube.com/" class="nav-link m-2 {{#if @last}} disabled {{/if}}">{{text}}</a>
            {{/each}}
        </div>
        {{/each}}
    </div>
</main>