<main>
    <div class="nav mb-5">
        {{#with navigation}}
        {{#each links}}
        <div class="nav-item">
            <a href="https://github.com/" class="nav-link {{#if @last}}disabled{{/if}}">
                {{text}}
            </a>
        </div>
        {{/each}}
        {{/with}}
    </div>
    <div>
        <ol class="breadcrumb">
            {{#each breadcrumb}}
            <li class="breadcrumb-item {{#if @last}} active {{/if}}">
                <a href="https://github.com/">{{name}}</a>
                {{/each}}
            </li>
        </ol>
    </div>
    <div class="mt-5">
        <h1>{{header}}</h1>
    </div>
    <div class="row mt-4">
        {{#each sortBlock}}
        <div class="col-3">
            <select class="form-select">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>
    <div class="row">
        {{#with filterBlock}}
        <div class="col-4">
            <div class="card mt-4">
                <div class="card-body">
                    {{#with sellers}}
                    <p>{{title}}</p>
                    <div class="form-label">
                        {{#each list}}
                        <div class="form-check">
                            <label class="form-check-label">{{value}}</label>
                            <input type="checkbox" class="form-check-input">
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                    <hr class="my-3">
                    {{#with brands}}
                    <label class="form-label">{{title}}</label>
                    {{#with input}}
                    <input class="form-control" placeholder="{{placeholder}}">
                    {{/with}}
                    <div class="form-label mt-3">
                        {{#each options}}
                        <div class="form-check">
                            <label class="form-check-label">
                                {{value}}
                            </label>
                            <input type="checkbox" class="form-check-input">
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                    <hr class="my-4">
                    {{#with price}}
                    <p>{{price}}</p>
                    {{#with range}}
                    <input class="form-control" placeholder="{{from}}">
                    <input class="form-control mt-3" placeholder="{{to}}">
                    {{/with}}
                    {{#with button}}
                    <div class="mt-2">
                        <a href="https://www.youtube.com/" class="btn btn-outline-secondary">{{text}}</a>
                    </div>
                    {{/with}}
                    {{/with}}
                    <hr class="my-4">
                    {{#each filterList}}
                    <div class="form-label mb-4">{{title}}
                        {{#each options}}
                        <div class="form-check mt-2">
                            <label class="form-check-label">{{value}}</label>
                            <input type="checkbox" class="form-check-input">
                        </div>
                        {{/each}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}
        {{> catalogItem}}
    </div>
    {{#with service}}
    <div class="card text-center text-bg-success mt-4">
        <div class="card-body">
            <h2>{{title}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
            <div>
                <a href="https://www.youtube.com/" class="btn btn-primary">{{text}}</a>
            </div>
            {{/each}}
        </div>
    </div>
    {{/with}}
    </div>
    <hr class="my-5">
    <div class="nav">
        {{#each footer}}
        <div class="nav-item">
            {{#each this}}
            <a href="https://www.youtube.com/" class="nav-link m-2 {{#if @last}} disabled {{/if}}">{{text}}</a>
            {{/each}}
        </div>
        {{/each}}
    </div>
</main>